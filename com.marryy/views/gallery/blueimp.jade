extends ../layout
block content
	//gallery images urls
	div.container(class='container-body')
		div.row(id='links',style='text-align : center !important')
			each item in gallery.images
				div(style='margin:2px auto;')
					a(href='#{item}!phone')
						img(src='#{item}!thumbnail', alt='...', class='img-thumbnail img-circle')
				
		div.container
			div#blueimp-gallery(class='blueimp-gallery')
				div.slides
				h3.title
				a.prev
				a.next
				a.close
				a.play-pause
				ol.indicator
			
	link(rel='stylesheet', href='/stylesheets/yt_gallery.css')
	link(rel='stylesheet', href="/gallerylibs/blueimp/css/blueimp-gallery.min.css")
	script(src='/jquery/jquery-1.11.0.js')
	script(src="/gallerylibs/blueimp/js/blueimp-gallery.min.js")
	script(src='/js/gallery_portal.js')
	script(src='/js/gallery/blueimp.js')