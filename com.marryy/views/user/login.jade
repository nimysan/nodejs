extends ../layout.jade
block content
	div.container(class='container-body')
		<div class="alert hide" role="alert" id="message"></div>
		div.row
			div.col-md-3
			div.col-md-6
				div(class="panel panel-info login_panel")
					div.panel-heading
						h2.panel-title 登录
					div.panel-body
						div(role='form', class="login_form") 
							div.form-group(class='has-feedback', atth='user_name')
								div.input-group
									span(class='glyphicon glyphicon-user input-group-addon')
									input#user_name(type='text', class='form-control',placeholder='用户名字',aria-describedby='icon4name')
								
							div.form-group(class='has-feedback',atth='user_password')
								div.input-group
									span(class='glyphicon glyphicon-cog input-group-addon')
									input#user_password(type='password', class='form-control',placeholder='密码',aria-describedby='icon4pass')
								
							button#user_login(type='button', class='btn btn-primary') 登录
								span(class='glyphicon glyphicon-log-in')
							h3 没有帐号？ <a href="/user/signup">注册</a>一个.
			div.col-md-3
			script(src='/js/user.js')			