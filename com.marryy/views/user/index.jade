extends ../layout.jade
block content
	div.container(class='container-body')
		div.row
			div.col-md-2
				ul(class="nav nav-pills nav-stacked")
					li.active
						a(href='/user/profile') 用户设置
					li
						a(href='/user/gallery') 相册管理
					li
						a#create_gallery(href='javascript:void(0);') 相册创建
			div.col-md-10
				block user_content
					div(class="panel panel-info login_panel")
						div.panel-heading
							h2.panel-title 相册
						div.panel-body
							div(role='form', class="gallery_form") 
								div.form-group(class='has-feedback', atth='user_name')
									div.input-group
										span(class='glyphicon glyphicon-inbox input-group-addon')
										input#g_title(type='text', class='form-control',placeholder='相册标题,会显示给别人')
									
								div.form-group(class='has-feedback',atth='user_password')
									div.input-group
										span(class='glyphicon glyphicon-list-alt input-group-addon')
										input#g_desc(type='text-area', class='form-control',placeholder='详细描述')
									
								button#g_create(type='button', class='btn btn-primary') 按下按钮创建
									span(class='glyphicon glyphicon-cloud')
	script(src='/js/user.js')
