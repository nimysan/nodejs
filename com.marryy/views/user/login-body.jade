block content

	div.container-fluid
		div.header 
			h3 登录
		div.row
			div.col-md-5
				div(role='form') 
					div.form-group(class='has-feedback', atth='user_name')
						label.control-label(for='user_name') 用户名
						input#user_name(type='text', class='form-control',placeholder='用户名字',aria-describedby='icon4name')
						span(class='glyphicon form-control-feedback hide',aria-hidden='true')
						span(id='icon4name',class='sr-only hide')
						
					div.form-group(class='has-feedback',atth='user_password')
						label.control-label(for='user_password') 密码
						input#user_password(type='password', class='form-control',placeholder='密码',aria-describedby='icon4pass')
						span(class='glyphicon form-control-feedback hide',aria-hidden='true')
						span(id='icon4pass',class='sr-only hide')
						
					<div class="alert hide" role="alert" id="message"></div>	
					button#user_login(type='button', class='btn btn-primary') 创建
			div.col-md-7
			
		script(src='/js/user.js')
